# https://editorconfig.org

root = true

[*] # 表示所有文件使用
charset = utf-8 # 文件字符集
indent_style = space # 缩进风格 tab|space
indent_size = 2 # 缩进大小
end_of_line = lf # 控制换行符 lf\cr\crlf
insert_final_newline = true #  去除行首空白字符
trim_trailing_whitespace = true # 文件末尾新建一个新行

[*.md] # 仅在文件使用
insert_final_newline = false
trim_trailing_whitespace = false
